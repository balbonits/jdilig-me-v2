{
  "name": "jdilig-me-v2",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:clean": "rimraf .next && next dev",
    "dev:fresh": "rimraf .next && npm run generate && next dev",
    "build": "npm run generate && next build",
    "build:next": "next build",
    "build:clean": "rimraf .next && npm run build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
  "test:coverage": "jest --coverage",
  "test:e2e": "playwright test",
  "test:all": "npm run test && npm run test:e2e",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "generate": "npm run generate:exercises && npm run generate:utilities && npm run generate:projects",
    "generate:exercises": "ts-node scripts/generate-exercises.ts",
    "generate:utilities": "ts-node scripts/generate-utilities.ts",
    "generate:projects": "ts-node scripts/generate-projects.ts",
    "process-images": "ts-node scripts/process-project-images.ts"
  },
  "dependencies": {
    "next": "15.4.5",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.54.2",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.4.5",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "playwright": "^1.54.2",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10",
    "typescript": "^5",
    "rimraf": "^6.0.1"
  }
}
